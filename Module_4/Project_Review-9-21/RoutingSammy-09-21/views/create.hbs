{{> header}}
<div class="container">
      <div class="row space-top">
        <div class="col-md-12">
          <h1>Create New Furniture</h1>
          <p>Please fill all fields.</p>
        </div>
      </div>
      <form method="POST" action="#/create" >
        <div class="row space-top">
          <div class="col-md-4">
            <div class="form-group">
              <label class="form-control-label" for="new-make">Make</label>
              <input class="form-control" name="make" id="new-make" type="text">
            </div>
            <div class="form-group has-success">
              <label class="form-control-label" for="new-model">Model</label>
              <input class="form-control is-valid" name="model" id="new-model" type="text">
              <div class="form-control-feedback">This input value is valid</div>
            </div>
            <div class="form-group has-danger">
              <label class="form-control-label" for="new-year">Year</label>
              <input class="form-control is-invalid" name="year" id="new-year" type="number">
              <div class="form-control-feedback">This input value is invalid</div>
            </div>
            <div class="form-group">
              <label class="form-control-label" for="new-description">Description</label>
              <input class="form-control" name="description" id="new-description" type="text">
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label class="form-control-label" for="new-price">Price</label>
              <input class="form-control" name="price" id="new-price" type="number">
            </div>
            <div class="form-group">
              <label class="form-control-label" for="imgURL">Image</label>
              <input class="form-control" name="imgURL" id="new-image" type="text">
            </div>
            <div class="form-group">
              <label class="form-control-label" for="material">Material (optional)</label>
              <input class="form-control" name="material" id="new-material" type="text">
            </div>
           <div class="form-group">
             <input type="submit" class="btn btn-primary" value="Create" />
           </div>
            
          </div>
        </div>
      </form>
</div>
